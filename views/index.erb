<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>account_book</title>
  <script src="/assets/js/Chart.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <div class="row justify-content-md-center"> //div
      <div class="col-lg-6"> //div
        <% unless @items.empty? %>
          <canvas id="graph"></canvas>
        <% end %>
        <h3 class="text-center my-4">合計：<%= @total %>円</h3>
        <div class="card"> //div
          <div class="card-body"> //div
            <form action="/create" method="post">
              <div class="form-group">
                <label for="title">内容</label>
                <input type="text" name="title" class="form-control">
              </div>
              <div class="form-group">
                <label for="price">金額</label>
                <input type="text" name="price" class="form-control">
              </div>
              <div class="form-group">
                // カテゴリー
                <select name="category" class="form-control">
                  <% @categories.each do |category| %>
                    <option value="<%= category.id %>"><%= category.name %></option>
                  <% end %>
                </select>
              </div>
              <input type="submit" value="追加" class="btn btn-dark float-right mt-2">   
            </form>
          </div>
        </div>
  
        <div class="btn-group mt-5 mb-3 col-lg-12">
          <% @categories.each do |category| %>
            <a href="/category/<%= category.id %>" class="btn btn-secondary"><%= category.name %></a>
          <% end %>
        </div>
  
  <% if @category_name.present? %>
    <h2><%= @category_name %></h2>
  <% end %>
  
  <div>
    <% @items.each do |item| %>
      <p><%= item.category.try(:name) %></p>
      <div>
        <p><%= item.title %></p>
        <p><%= item.price %>円</p>
      </div>
      <div>
        <span>
          <form action="/delete/<%= item.id %>" method="post">
            <input type="submit" value="削除">
          </form>
        </span>
        <span>
          <a href="/edit/<%= item.id %>">EDIT</a>
        </span>
      </div>
    <% end %>
  </div>
  <script>
    ctx = document.getElementById("graph");
    ctx.width = 500;
    clr = ['lightsalmon', 'palegreen', 'lightskyblue', 'plum', 'silver', 'pink'];
    var price = [], colors = [], labels = [];
    <% @items.each_with_index do |item, idx| %>
      price.push(<%= item.price %>);
      labels.push('<%= item.title %>');
      colors.push(clr[<%= idx % 6 %>]);
    <% end %>
    var data = {
      labels: labels,
      datasets:[
      {
        data: price,
        backgroundColor: colors
      }]
    };
    var myDoughnut = new Chart(ctx,{
      type: 'doughnut',
      data: data,
      options: { responsive: false }
    });
  </script>
</body>
</html>
